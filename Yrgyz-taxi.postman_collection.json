{
  "info": {
    "name": "Yrgyz Taxi API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{BASE_URL}}/auth/register", "host": ["{{BASE_URL}}"], "path": ["auth", "register"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+77001112233\",\n  \"password\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{BASE_URL}}/auth/login", "host": ["{{BASE_URL}}"], "path": ["auth", "login"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+77001112233\",\n  \"password\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "Trips - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{BASE_URL}}/trips", "host": ["{{BASE_URL}}"], "path": ["trips"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"from\": \"Aktobe\",\n  \"to\": \"Almaty\",\n  \"date\": \"2025-09-20T08:00:00Z\",\n  \"seatsAvailable\": 3,\n  \"pricePerSeat\": 5000\n}"
        }
      }
    },
    {
      "name": "Bookings - Reserve seat",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{BASE_URL}}/bookings", "host": ["{{BASE_URL}}"], "path": ["bookings"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tripId\": 1,\n  \"passengerId\": 1,\n  \"seatsBooked\": 2,\n  \"paymentMethod\": \"cash\"\n}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": ""
    }
  ]
}

